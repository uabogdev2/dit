{
    "openapi": "3.0.0",
    "info": {
        "title": "Dots & Boxes API",
        "description": "API Documentation for Dots & Boxes Backend",
        "contact": {
            "email": "admin@dotsandboxes.com"
        },
        "version": "1.0.0"
    },
    "paths": {
        "/api/v1/auth/firebase": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Authenticate with Firebase Token",
                "operationId": "57feac3c4098f59c3bdef4b930c4992b",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "token": {
                                        "type": "string",
                                        "example": "firebase_id_token_here"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "access_token": {
                                            "type": "string"
                                        },
                                        "token_type": {
                                            "type": "string",
                                            "example": "Bearer"
                                        },
                                        "user": {
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Invalid Token"
                    }
                }
            }
        },
        "/api/v1/me": {
            "get": {
                "tags": [
                    "Auth"
                ],
                "summary": "Get current user info",
                "operationId": "13b43df400e475a157538f73617b8c3d",
                "responses": {
                    "200": {
                        "description": "User details"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/v1/matches": {
            "get": {
                "tags": [
                    "Matches"
                ],
                "summary": "List user matches",
                "operationId": "9bcc1a144c77d603870b06dfb75ec9ff",
                "responses": {
                    "200": {
                        "description": "List of matches"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            },
            "post": {
                "tags": [
                    "Matches"
                ],
                "summary": "Create a new match",
                "operationId": "52d2105b1aa74ef4cfb1d6f27d70b9a0",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "grid_size": {
                                        "type": "integer",
                                        "example": 3
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Match created"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/v1/matches/{id}": {
            "get": {
                "tags": [
                    "Matches"
                ],
                "summary": "Get match details",
                "operationId": "52c25c8f709c47bfd56802cc2b4458f8",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Match details"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/v1/matches/{code}/join": {
            "post": {
                "tags": [
                    "Matches"
                ],
                "summary": "Join a match by code",
                "operationId": "30e390f73784ff7af710338e0c998599",
                "parameters": [
                    {
                        "name": "code",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Joined successfully"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/v1/matches/{id}/moves": {
            "post": {
                "tags": [
                    "Moves"
                ],
                "summary": "Play a move",
                "operationId": "0227d5610716fea3adfc18c2e659ff22",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "r": {
                                        "type": "integer"
                                    },
                                    "c": {
                                        "type": "integer"
                                    },
                                    "o": {
                                        "type": "string",
                                        "enum": [
                                            "h",
                                            "v"
                                        ]
                                    },
                                    "move_idempotency_key": {
                                        "type": "string"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Move accepted"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        }
    },
    "tags": [
        {
            "name": "Auth",
            "description": "Auth"
        },
        {
            "name": "Matches",
            "description": "Matches"
        },
        {
            "name": "Moves",
            "description": "Moves"
        }
    ]
}